{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "es2016",
      "es2015",
      "es6"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "__mocks__",
    "__tests__"
  ],
  "include": [
    "*.ts",
    "*.js"
  ]
}
